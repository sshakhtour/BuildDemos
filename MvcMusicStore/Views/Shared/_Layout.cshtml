        var hpft = new HomePagefeatureToggle();
        var svc = new ServiceAFeaturetoggle();
    }
    <div id="footer"> 
        <span>HomePagefeatureToggleUI =<b>@hpftUI.FeatureEnabled</b></span>|
        <span>HomePagefeatureToggle = <b>@hpft.FeatureEnabled</b></span>|
        <span>ServiceAFeaturetoggle =<b> @svc.FeatureEnabled</b></span>|
        <span>Version:__Build.Buildnumber__  </span>
    </div>
</body>
</html>
