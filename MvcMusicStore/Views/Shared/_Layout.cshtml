<body>
    <div id="header">
        <div>
            <h1><a href="/">Welcome to the ASP.NET MVC MUSIC STORE!</a></h1>
            @if (new HomePagefeatureToggleUI().FeatureEnabled)
            {
                <h1><a href="/">You are comming from location:@ViewBag.CustomerCountry</a></h1>
            }
        </div>
        <ul id="navlist">
            <li class="first"><a href="@Url.Content("~")" id="current">Home</a></li>
            <li><a href="@Url.Content("~/Store/")">Store</a></li>
            <li>@{Html.RenderAction("CartSummary", "ShoppingCart");}</li>
